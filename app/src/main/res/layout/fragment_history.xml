<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.history.HistoryFragment">

    <ImageView
        android:id="@+id/img_back_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="History Pelaporan"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/opensanscondensedextrabold"
        app:layout_constraintBottom_toBottomOf="@+id/img_back_history"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/txt_history_hari_ini"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/opensanscondensedextrabold"
        android:text="Hari Ini :"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_back_history" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_history_hari_ini"
        android:layout_width="0dp"
        android:layout_height="290dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_history_hari_ini"
        tools:listitem="@layout/list_pelaporan" />


    <TextView
        android:id="@+id/txt_history_kemarin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/opensanscondensedextrabold"
        android:text="Kemarin :"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/txt_history_hari_ini"
        app:layout_constraintTop_toBottomOf="@+id/rv_history_hari_ini" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_history_kemarin"
        android:layout_width="0dp"
        android:layout_height="290dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        tools:listitem="@layout/list_pelaporan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_history_kemarin" />

</androidx.constraintlayout.widget.ConstraintLayout>