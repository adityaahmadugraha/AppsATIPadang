        <TextView
            android:id="@+id/tv_title_laporan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppinssembiold"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Aditya Ahmad" />

        <TextView
            android:id="@+id/tv_tgl_laporan_sarana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/poppinssembiold"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_name_alat"
            app:layout_constraintStart_toStartOf="@+id/tv_title_laporan"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_laporan"
            tools:text="Sarana" />

        <TextView
            android:id="@+id/tv_name_alat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/poppinssembiold"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_tgl_laporan_sarana"
            tools:text="10-10-2020" />


        <TextView
            android:id="@+id/tv_merk_alat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinssembiold"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_name_alat"
            app:layout_constraintStart_toStartOf="@+id/tv_name_alat"
            app:layout_constraintTop_toBottomOf="@+id/tv_name_alat"
            tools:text="Samsung" />


        <TextView
            android:id="@+id/tv_status_laporan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/poppinssembiold"
            tools:text="Diproses"
            android:textColor="@color/blue"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txt_status" />


        <TextView
            android:id="@+id/txt_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinssembiold"
            android:text="Diproses"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>